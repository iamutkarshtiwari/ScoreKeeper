<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/action_buttons">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/actions"
        android:textColor="@android:color/white"
        android:textSize="13sp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/run_1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/run_1"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:onClick="updateRuns"
            android:duplicateParentState="true"/>

        <Button
            android:id="@+id/run_2"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/run_2"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:onClick="updateRuns"
            android:duplicateParentState="true"/>

        <Button
            android:id="@+id/run_3"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/run_3"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:onClick="updateRuns"
            android:duplicateParentState="true"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/run_4"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/run_4"
            android:textColor="@color/background"
            android:textAllCaps="false"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="updateRuns"
            android:duplicateParentState="true" />

        <Button
            android:id="@+id/run_6"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/run_6"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="updateRuns"
            android:duplicateParentState="true" />

        <Button
            android:id="@+id/run_0"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/run_0"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="updateRuns"
            android:duplicateParentState="true" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/no_ball"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:text="@string/no_ball"
            android:textAllCaps="false"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="updateRuns"
            android:duplicateParentState="true" />

        <Button
            android:id="@+id/wide"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@android:color/white"
            android:text="@string/wide"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="updateRuns"
            android:duplicateParentState="true" />

        <Button
            android:id="@+id/out"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@android:color/white"
            android:text="@string/out"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:textStyle="bold"
            android:onClick="updateRuns"
            android:duplicateParentState="true" />
    </LinearLayout>

</LinearLayout>