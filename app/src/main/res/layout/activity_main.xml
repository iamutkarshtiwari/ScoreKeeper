<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="io.github.iamutkarshtiwari.practiseset2.MainActivity">


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"
        android:text="@string/heading"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/current_players"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginTop="8dp"
        android:orientation="vertical">


        <View
            android:id="@+id/dot_1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/yellow" />

        <TextView
            android:id="@+id/first_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/dot_1"
            android:text="@string/yet_to_bat"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <View
            android:id="@+id/dot_2"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_below="@id/dot_1"
            android:layout_marginLeft="8dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/yellow" />

        <TextView
            android:id="@+id/second_player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dot_1"
            android:layout_toRightOf="@id/dot_2"
            android:text="@string/yet_to_bat"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <!--First player's stats on right side-->

        <TextView
            android:id="@+id/first_player_balls_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/first_player"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="@string/ball_label"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/first_player_balls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_player_balls_label"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/first_player_balls_label"
            android:text="@string/default_stats"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/first_player_runs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/first_player"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/first_player_balls"
            android:text="@string/run_label"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/first_player_runs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/first_player_runs_label"
            android:text="@string/default_stats"
            android:textColor="@android:color/white"

            android:textSize="16sp" />


        <!--Second player stats on right side-->

        <TextView
            android:id="@+id/second_player_balls_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/second_player"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:text="@string/ball_label"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/second_player_balls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/second_player_balls_label"
            android:text="@string/default_stats"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/second_player_runs_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/second_player"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/second_player_balls"
            android:text="@string/run_label"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/second_player_runs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_player_runs_label"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@id/second_player_runs_label"
            android:text="@string/default_stats"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="KKR won by 2 runs &amp;amp; 4 wickets!"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/current_players"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/selector_panel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/inning1_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_right"
                android:text="@string/first_inning"
                android:textColor="@color/selector_buttons_text" />

            <Button
                android:id="@+id/inning2_button"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="32dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_left"
                android:text="@string/second_inning"
                android:textColor="@color/selector_buttons_text" />

        </LinearLayout>

        <!--Score section-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <include

                android:id="@+id/team1_score_board"
                layout="@layout/score_board"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"


                />


            <include
                android:id="@+id/team2_score_board"
                layout="@layout/score_board"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


        </LinearLayout>


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.5"
            android:fillViewport="true"
            android:gravity="center">

            <!--Stats section-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="0.0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"

                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Run Rate"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Overs"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="8dp"
                        android:text="Balls left"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:text="0.0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <View
                android:layout_width="300dp"
                android:layout_height="2dp"
                android:layout_centerInParent="true"
                android:background="@android:color/white" />

        </RelativeLayout>
        <!--Action buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:divider="?android:dividerVertical"
            android:orientation="horizontal"
            android:showDividers="middle">

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.03"
                android:background="@android:color/white"
                android:text="Reset"
                android:textColor="@color/background"
                android:textSize="10sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_weight="0.03"
                android:background="@android:color/white"
                android:text="Reset"
                android:textColor="@color/background"
                android:textSize="10sp"
                android:textStyle="bold" />


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:layout_weight="0.03"
            android:background="@android:color/white"
            android:text="Reset"
            android:textColor="@color/background"
            android:textSize="10sp"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>